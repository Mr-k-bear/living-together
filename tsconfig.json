{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "strict": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "target": "ES5",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "baseUrl": "./",
        "paths": {
            "@Behavior/*": [
                "./source/Behavior/*"
            ],
            "@Group/*": [
                "./source/Group/*"
            ],
            "@Model/*": [
                "./source/Model/*"
            ],
            "@GLRender/*": [
                "./source/GLRender/*"
            ]
        }
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "config"
    ]
}